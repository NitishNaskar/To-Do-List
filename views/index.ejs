<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To Do List -Node.js</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <section class="py-5 text-center container">
        <div class="col-sm-6 card text-center">
            <div class="card-body">
              <h2 class="card-title mb-3">To-Do App</h2>

              <div class="form-floating mb-3">
                <input type="email" class="form-control" id="floatingInput" placeholder="name">
                <label for="floatingInput">Name of Task</label>
              </div>

              <div class="row">
                  <div class="col">
                    <div class="form-floating">
                        <select class="form-select" id="floatingSelect" aria-label="Floating label select example">
                            <option selected>Open this select menu</option>
                            <option value="1">Personal</option>
                            <option value="2">Work</option>
                            <option value="3">School</option>
                            <option value="4">Other</option>
                        </select>
                        <label for="floatingPassword">Category</label>
                    </div>
                  </div>
                  <div class="col">
                    <div class="form-floating">
                        <input type="date" class="form-control" id="floatingPassword" placeholder="dd/mm/yyyy">
                        <label for="floatingPassword">Due Date</label>
                      </div>
                  </div>
              </div>

              <div class="mt-3">
                <a href="#" class="btn btn-primary">Add Task</a>
              </div>
            </div>
          </div>
      </section>

    <script src="/assets/home.js"></script>
</body>
</html>